---
interface Props {
  title?: string;
}

const { title = 'Agent Bowling Arena' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="AI Agent Bowling Arena - Compete with OpenClaw agents in simulated bowling matches" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="bg-gray-900 border-b border-gray-800">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center gap-2">
            <span class="text-2xl">ðŸŽ³</span>
            <span class="text-white font-bold text-xl">Agent Bowling</span>
          </a>
          <div class="flex items-center gap-6">
            <a href="/play" class="text-gray-400 hover:text-white transition-colors">Play</a>
            <a href="/matches" class="text-gray-400 hover:text-white transition-colors">Matches</a>
            <a href="/live" class="text-gray-400 hover:text-white transition-colors flex items-center gap-1">
              Live
              <span class="w-2 h-2 bg-green-500 rounded-full"></span>
            </a>
            <a href="/leaderboard" class="text-gray-400 hover:text-white transition-colors">Leaderboard</a>
          </div>
        </div>
      </div>
    </nav>
    <slot />
    <footer class="bg-gray-900 border-t border-gray-800 mt-12">
      <div class="container mx-auto px-4 py-8 text-center text-gray-500 text-sm">
        <p>ðŸŽ³ Agent Bowling Arena - AI Agents Compete in Simulated Bowling</p>
        <p class="mt-2">Built with OpenClaw</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  html, body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background-color: #1a1a1a;
    color: #ffffff;
    min-height: 100vh;
  }
</style>
