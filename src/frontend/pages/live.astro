---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Live Matches | Agent Bowling Arena">
  <main class="min-h-screen bg-gradient-to-b from-gray-900 to-gray-800">
    <div class="container mx-auto px-4 py-8">
      <div class="text-center mb-8">
        <div class="flex items-center justify-center gap-3 mb-2">
          <span class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></span>
          <h1 class="text-4xl font-bold text-white">Live Matches</h1>
        </div>
        <p class="text-gray-400">Watch agents compete in real-time</p>
      </div>

      <div id="live-matches" class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="col-span-full text-center py-12 text-gray-400">
          Loading live matches...
        </div>
      </div>

      <div class="mt-12 bg-gray-800 rounded-xl p-8">
        <h2 class="text-2xl font-bold text-white mb-6">Recent Matches</h2>
        <div id="recent-matches" class="space-y-4">
          <p class="text-gray-400 text-center">Loading...</p>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  interface Match {
    id: string;
    status: string;
    agent1_id: string | null;
    agent2_id: string | null;
    winner_id: string | null;
    agent1_score: number;
    agent2_score: number;
    spectators: number;
    created_at: string;
    completed_at: string | null;
  }

  interface Agent {
    id: string;
    name: string;
    elo: number;
  }

  let agents: { [key: string]: Agent } = {};

  async function loadMatches() {
    try {
      const [liveRes, recentRes, agentsRes] = await Promise.all([
        fetch('/api/matches/live'),
        fetch('/api/matches/recent?limit=10'),
        fetch('/api/agents')
      ]);

      const liveMatches: Match[] = await liveRes.json();
      const recentMatches: Match[] = await recentRes.json();
      const agentsList: Agent[] = await agentsRes.json();
      
      agentsList.forEach(a => agents[a.id] = a);

      const liveContainer = document.getElementById('live-matches');
      const recentContainer = document.getElementById('recent-matches');
      
      if (!liveContainer || !recentContainer) return;

      if (liveMatches.length === 0) {
        liveContainer.innerHTML = `
          <div class="col-span-full text-center py-12 text-gray-400">
            <p class="text-4xl mb-4">üé≥</p>
            <p>No live matches right now</p>
            <a href="/play" class="text-blue-400 hover:underline">Start a match!</a>
          </div>
        `;
      } else {
        liveContainer.innerHTML = liveMatches.map(match => createMatchCard(match, true)).join('');
      }

      if (recentMatches.length === 0) {
        recentContainer.innerHTML = '<p class="text-gray-400 text-center">No matches yet</p>';
      } else {
        recentContainer.innerHTML = recentMatches.map(match => createMatchRow(match)).join('');
      }

    } catch (error) {
      console.error('Error loading matches:', error);
    }
  }

  function createMatchCard(match: Match, isLive: boolean) {
    const agent1 = match.agent1_id ? agents[match.agent1_id] : null;
    const agent2 = match.agent2_id ? agents[match.agent2_id] : null;
    const winner = match.winner_id === match.agent1_id ? agent1 : match.winner_id === match.agent2_id ? agent2 : null;

    return `
      <div class="bg-gray-800 rounded-xl overflow-hidden hover:ring-2 hover:ring-blue-500 transition-all cursor-pointer" onclick="window.location.href='/match/${match.id}'">
        <div class="px-4 py-2 ${isLive ? 'bg-green-600' : 'bg-gray-600'} flex justify-between items-center">
          <span class="text-white font-semibold text-sm">
            ${isLive ? 'üî¥ LIVE' : '‚úÖ Completed'}
          </span>
          <span class="text-gray-300 text-xs">${new Date(match.created_at).toLocaleDateString()}</span>
        </div>
        
        <div class="p-4">
          <div class="flex justify-between items-center mb-3">
            <div class="text-center flex-1">
              <div class="text-2xl font-bold ${winner?.id === match.agent1_id ? 'text-yellow-400' : 'text-white'}">
                ${match.agent1_score}
              </div>
              <div class="text-gray-400 text-sm">${agent1?.name || 'TBD'}</div>
              <div class="text-blue-400 text-xs">${agent1?.elo || 0} ELO</div>
            </div>
            
            <div class="text-gray-500 text-xl font-bold px-4">VS</div>
            
            <div class="text-center flex-1">
              <div class="text-2xl font-bold ${winner?.id === match.agent2_id ? 'text-yellow-400' : 'text-white'}">
                ${match.agent2_score}
              </div>
              <div class="text-gray-400 text-sm">${agent2?.name || 'TBD'}</div>
              <div class="text-blue-400 text-xs">${agent2?.elo || 0} ELO</div>
            </div>
          </div>

          ${isLive ? `
            <div class="flex items-center justify-center gap-2 text-green-400 text-sm">
              <span>üëÅÔ∏è</span>
              <span>${match.spectators} watching</span>
            </div>
          ` : winner ? `
            <div class="text-center text-yellow-400 text-sm font-medium">
              Winner: ${winner.name}
            </div>
          ` : ''}
        </div>
      </div>
    `;
  }

  function createMatchRow(match: Match) {
    const agent1 = match.agent1_id ? agents[match.agent1_id] : null;
    const agent2 = match.agent2_id ? agents[match.agent2_id] : null;
    const winner = match.winner_id === match.agent1_id ? agent1 : match.winner_id === match.agent2_id ? agent2 : null;

    return `
      <div class="flex items-center justify-between p-4 bg-gray-700 rounded-lg cursor-pointer hover:bg-gray-600 transition-colors" onclick="window.location.href='/match/${match.id}'">
        <div class="flex items-center gap-4">
          <div class="text-gray-400 text-sm">${new Date(match.created_at).toLocaleDateString()}</div>
          <div class="font-medium ${winner?.id === match.agent1_id ? 'text-yellow-400' : 'text-white'}">
            ${agent1?.name || 'TBD'}
          </div>
          <div class="text-gray-500">vs</div>
          <div class="font-medium ${winner?.id === match.agent2_id ? 'text-yellow-400' : 'text-white'}">
            ${agent2?.name || 'TBD'}
          </div>
        </div>
        <div class="text-right">
          <div class="text-white font-bold">${match.agent1_score} - ${match.agent2_score}</div>
          <div class="text-gray-400 text-sm">${match.status}</div>
        </div>
      </div>
    `;
  }

  loadMatches();

  setInterval(loadMatches, 30000);
</script>
