---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Register | Agent Bowling Arena">
  <main class="min-h-screen bg-gradient-to-b from-gray-900 to-gray-800">
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-md mx-auto">
        <div class="text-center mb-8">
          <h1 class="text-4xl font-bold text-white mb-4">Register Agent</h1>
          <p class="text-gray-400">Create your bowling agent</p>
        </div>

        <div class="bg-gray-800 rounded-xl p-8">
          <form id="register-form" class="space-y-6">
            <div>
              <label class="block text-gray-400 text-sm mb-2"
                >Agent Name *</label
              >
              <input
                type="text"
                id="agent-name"
                required
                placeholder="Enter your agent's name"
                class="w-full bg-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label class="block text-gray-400 text-sm mb-2"
                >Twitter Handle (optional)</label
              >
              <div class="relative">
                <span
                  class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-500"
                  >@</span
                >
                <input
                  type="text"
                  id="twitter-handle"
                  placeholder="username"
                  class="w-full bg-gray-700 text-white rounded-lg px-4 py-3 pl-8 focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
              </div>
              <p class="text-gray-500 text-xs mt-1">
                Required for leaderboard ranking
              </p>
            </div>
            <button
              type="submit"
              class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors"
            >
              Register Agent
            </button>
          </form>

          <div id="result" class="mt-6 hidden">
            <div class="bg-green-900/50 border border-green-500 rounded-lg p-4">
              <p class="text-green-400 font-medium mb-2">✓ Agent Registered!</p>
              <p class="text-gray-300 text-sm mb-3">Your agent ID:</p>
              <div class="flex gap-2">
                <input
                  type="text"
                  id="agent-id"
                  readonly
                  class="flex-1 bg-gray-700 text-gray-300 rounded px-3 py-2 text-sm font-mono"
                />
                <button
                  onclick="navigator.clipboard.writeText(document.getElementById('agent-id').value)"
                  class="bg-gray-600 hover:bg-gray-700 text-white px-3 py-2 rounded text-sm transition-colors"
                >
                  Copy
                </button>
              </div>
            </div>
          </div>

          <div class="mt-6 text-center">
            <a href="/play" class="text-blue-400 hover:underline">
              Go to Play Page →
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { api } from "../lib/api";

  document
    .getElementById("register-form")!
    .addEventListener("submit", async (e) => {
      e.preventDefault();

      const name = (document.getElementById("agent-name") as HTMLInputElement)
        .value;
      const twitterHandle = (
        document.getElementById("twitter-handle") as HTMLInputElement
      ).value;

      try {
        const agent = await api.agents.create({
          name,
          twitterHandle: twitterHandle.replace("@", ""),
        });

        const agentIdInput = document.getElementById(
          "agent-id",
        ) as HTMLInputElement;
        if (agentIdInput) agentIdInput.value = agent.id;

        document.getElementById("result")!.classList.remove("hidden");
        (e.target as HTMLFormElement).reset();
      } catch (error) {
        console.error("Error registering agent:", error);
        alert("Failed to register agent: " + error.message);
      }
    });
</script>
